# DWH Project Analyzer - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# CrewAI Settings
# ============================================

# Disable telemetry (anonymous usage statistics)
CREWAI_TELEMETRY=false
OTEL_SDK_DISABLED=true

# ============================================
# LLM Provider API Keys
# ============================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# OpenRouter (https://openrouter.ai/keys)
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key

# z.ai
ZAI_API_KEY=your-zai-api-key
ZAI_BASE_URL=https://api.z.ai/api/coding/paas/v4

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Default Settings
# ============================================

# Default LLM provider: openai, anthropic, ollama, openrouter, zai
DEFAULT_PROVIDER=zai

# Default model (must be valid for the provider)
DEFAULT_MODEL=glm-4.7

# Default temperature (0.0 - 2.0)
DEFAULT_TEMPERATURE=0.7

# ============================================
# Project Settings
# ============================================

# Path to YAML file with project list
PROJECTS_FILE=projects.yaml

# Enable sandbox restrictions (recommended: true)
SANDBOX_ENABLED=true
